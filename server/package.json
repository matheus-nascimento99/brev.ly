{
  "name": "brev.ly",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "tsup",
    "start": "node --env-file=.env dist/infra/http/server.js",
    "dev": "tsx watch --env-file .env src/infra/http/server.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "dotenv -e .env.test -- vitest run --config vitest.config.e2e.ts",
    "db:migrate:test:e2e": "dotenv -e .env.test -- drizzle-kit migrate",
    "pretest:e2e": "npm run db:migrate:test:e2e"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.886.0",
    "@aws-sdk/lib-storage": "^3.886.0",
    "@fastify/cors": "^11.1.0",
    "@fastify/swagger-ui": "^5.2.3",
    "@scalar/fastify-api-reference": "^1.34.6",
    "csv-stringify": "^6.6.0",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.5",
    "fastify": "^5.5.0",
    "fastify-type-provider-zod": "^6.0.0",
    "http-status": "^2.1.0",
    "postgres": "^3.4.7",
    "tsup": "^8.5.0",
    "uuidv7": "^1.0.2",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.3",
    "@faker-js/faker": "^10.0.0",
    "@types/node": "^24.3.1",
    "@types/supertest": "^6.0.3",
    "dotenv": "^17.2.2",
    "dotenv-cli": "^10.0.0",
    "supertest": "^7.1.4",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "unplugin-swc": "^1.5.7",
    "vitest": "^3.2.4",
    "vitest-tsconfig-paths": "^3.4.1"
  }
}
